{
    "name": "{{ .Site.Title }}",
    "short_name": "{{ .Site.Title }}",
    "start_url": "{{ .Site.BaseURL }}",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#007bff",
    "icons": [
        {
            "src": "{{ "android-chrome-192x192.png" | absURL }}",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "{{ "android-chrome-512x512.png" | absURL }}",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "screenshots": [
        {
            "src": "{{ "desktop.png" | absURL }}",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "{{ "mobile.png" | absURL }}",
            "sizes": "600x800",
            "type": "image/png"
        }
    ]
}
